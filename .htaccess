# .htaccess - Security Configuration untuk Apache Server
# Pastikan mod_rewrite dan mod_headers sudah enabled

# ============================================
# 1. FORCE HTTPS
# ============================================
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Force HTTPS
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
  
  # Remove www prefix (optional)
  # RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
  # RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
</IfModule>

# ============================================
# 2. SECURITY HEADERS
# ============================================
<IfModule mod_headers.c>
  # Content Security Policy
  Header always set Content-Security-Policy "default-src 'self'; script-src 'self' https://cdn.jsdelivr.net https://www.gstatic.com; style-src 'self' https://fonts.googleapis.com https://cdn.jsdelivr.net 'unsafe-inline'; font-src 'self' https://fonts.gstatic.com https://cdn.jsdelivr.net; img-src 'self' data: https:; connect-src 'self' https://firebase.googleapis.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self';"
  
  # Prevent MIME type sniffing
  Header always set X-Content-Type-Options "nosniff"
  
  # Prevent clickjacking attacks
  Header always set X-Frame-Options "DENY"
  
  # Enable XSS protection
  Header always set X-XSS-Protection "1; mode=block"
  
  # Referrer Policy
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  
  # Feature Policy / Permissions Policy
  Header always set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=()"
  
  # HSTS (HTTP Strict Transport Security)
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
  
  # Remove server information
  Header always unset Server
  Header always unset X-Powered-By
  Header always unset X-AspNet-Version
</IfModule>

# ============================================
# 3. DISABLE DIRECTORY LISTING
# ============================================
Options -Indexes

# ============================================
# 4. BLOCK ACCESS TO SENSITIVE FILES
# ============================================
<FilesMatch "^\.htaccess$|^\.htpasswd$|^\.git">
  Order allow,deny
  Deny from all
</FilesMatch>

<FilesMatch "\.(env|yml|yaml|config|config\.php)$">
  Order allow,deny
  Deny from all
</FilesMatch>

<FilesMatch "^(package\.json|composer\.json|\.gitignore|\.github|\.env\..*)$">
  Order allow,deny
  Deny from all
</FilesMatch>

# Block backup files
<FilesMatch "\.(bak|backup|old|tmp|swp|sql)$">
  Order allow,deny
  Deny from all
</FilesMatch>

# ============================================
# 5. GZIP COMPRESSION
# ============================================
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/xml
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/javascript
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE application/xhtml+xml
  AddOutputFilterByType DEFLATE application/rss+xml
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/x-javascript
  AddOutputFilterByType DEFLATE application/json
  
  # Exclude images
  SetEnvIfNoCase Request_URI "\.(jpg|jpeg|png|gif|ico|webp)$" no-gzip
</IfModule>

# ============================================
# 6. BROWSER CACHING
# ============================================
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Images
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  
  # CSS & JavaScript
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  
  # Fonts
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/eot "access plus 1 year"
  
  # HTML - no cache
  ExpiresByType text/html "access plus 0 seconds"
  
  # Default
  ExpiresDefault "access plus 2 days"
</IfModule>

# ============================================
# 7. RATE LIMITING (Basic)
# ============================================
<IfModule mod_ratelimit.c>
  # Limit bandwidth per connection
  # SetOutputFilter RATE_LIMIT
  # SetEnv rate-limit 1024
</IfModule>

# ============================================
# 8. PREVENT HOTLINKING
# ============================================
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Allow requests from your own domain
  RewriteCond %{HTTP_REFERER} !^$
  RewriteCond %{HTTP_REFERER} !^https?://([^/]*\.)?inverted\.exe [NC]
  
  # Block hotlinks to images (optional)
  RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [NC,F,L]
</IfModule>

# ============================================
# 9. DISABLE DANGEROUS HTTP METHODS
# ============================================
<Limit OPTIONS TRACE DELETE TRACK>
  Order allow,deny
  Deny from all
</Limit>

# ============================================
# 10. PREVENT SQL INJECTION & XSS
# ============================================
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Block SQL injection attempts
  RewriteCond %{QUERY_STRING} union.*select [NC,OR]
  RewriteCond %{QUERY_STRING} union.*all.*select [NC,OR]
  RewriteCond %{QUERY_STRING} select.*from [NC,OR]
  RewriteCond %{QUERY_STRING} insert.*into [NC,OR]
  RewriteCond %{QUERY_STRING} drop.*table [NC,OR]
  RewriteCond %{QUERY_STRING} delete.*from [NC,OR]
  RewriteCond %{QUERY_STRING} exec\( [NC,OR]
  RewriteCond %{QUERY_STRING} execute\( [NC,OR]
  RewriteCond %{QUERY_STRING} script>.*</script> [NC,OR]
  RewriteRule ^(.*)$ - [F,L]
</IfModule>

# ============================================
# 11. ADDITIONAL SECURITY
# ============================================

# Disable server signature
ServerSignature Off

# Hide PHP version
<IfModule mod_php.c>
  php_flag expose_php off
</IfModule>

# Set default character encoding
AddDefaultCharset UTF-8

# ============================================
# 12. REDIRECT RULES (Optional)
# ============================================
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Remove .html extension from URLs (optional)
  # RewriteCond %{REQUEST_FILENAME} !-f
  # RewriteCond %{REQUEST_FILENAME} !-d
  # RewriteRule ^([^\.]+)$ $1.html [NC, L]
  
  # Redirect old URLs (example)
  # RewriteRule ^old-page\.html$ /new-page/ [R=301,L]
</IfModule>
